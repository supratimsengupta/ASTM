@model IEnumerable<MvcApplication2.Models.Course>

@{
    ViewBag.Title = "Course";
}

<h2>Course</h2>
<br />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table cellpadding="10" cellspacing="10" width="100%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fees)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fees)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.CourseID.TrimEnd() }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CourseID.TrimEnd() })
        </td>
    </tr>
}

</table>
