<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - ASTM APPLICATION</title>
        
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
       @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div>
            
                           <img src="../../Images/header.png" style="width: 100%"/>
                        
                    
        </div>
        <div >
            @RenderSection("featured", required: false)

            <div >
                        <table style="width:100%; height:500px" >
                                <tr>
                                    <td class="clear hideSkiplink" width="30%" style="border-right-style: solid" 
                                        valign="top" align="left">
                                    <div style="text-align:left">
                                  
                                        <ul >
                                            <li>@Html.ActionLink("Course", "Index", "Course")</li>
                            
                                        </ul>
                                        <ul>
                                            <li>@Html.ActionLink("Training Center", "Index", "Course")</li>
                            
                                        </ul>
                   
                                        </div>
                                    </td>
                                    <td valign="top">
                                        
                                             @RenderBody()
                                         
                                    </td>
                                </tr>
                                </table>                    </div>
                                
                </div>


            
       
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
